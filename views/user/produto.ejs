<%- include("partials/head") %>

<body> 
    <%- include("partials/header") %>

    <main> <!--Início do conteúdo principal-->
        <section class="mt-5"> <!--Início da seção-->
            <div class="container"> <!--Início do container-->
                <div class="row"> <!--Início da linha-->
                    <%produtos.forEach(produto => {%>
                        <div class="col-md-4 mb-4"> <!--Início da coluna-->
                            <div class="card"> <!--Início do card-->
                                <div class="card-header"> <!--Início do cabeçalho do cartão-->
                                    <h6 class="text-center text-white"><%=produto.nome%></h6>
                                </div> <!--Fim do cabeçalho do cartão-->
                                <div class="card-body"> <!--Início do corpo do cartão-->

                                    <div id="carousel-controles-<%=produto.id%>" class="carousel slide" data-ride="carousel">
                                        <ol class="carousel-indicators">
                                            <li data-target="#carousel-controles-<%=produto.id%>" data-slide-to="0" class="active"></li>
                                            <% if(produto.imagem2 !== null) { %>
                                                <li data-target="#carousel-controles-<%=produto.id%>" data-slide-to="1"></li>
                                            <%}%>
                                            <% if(produto.imagem3 !== null) { %>
                                                <li data-target="#carousel-controles-<%=produto.id%>" data-slide-to="2"></li>
                                            <%}%>
                                        </ol>
                                    
                                        <div class="carousel-inner">
                                            <div class="carousel-item active">
                                                <img src="/uploads/<%=produto.imagem1%>" class="d-block w-100" alt="" style=" min-height: 250px; max-height: 250px;">
                                            </div>
                                            <% if(produto.imagem2 !== null) { %>
                                                <div class="carousel-item">
                                                    <img src="/uploads/<%=produto.imagem2%>" class="d-block w-100" alt="" style=" min-height: 250px; max-height: 250px;">
                                                </div>
                                            <%}%>
                                            <% if(produto.imagem3 !== null) { %>
                                                <div class="carousel-item">
                                                    <img src="/uploads/<%=produto.imagem3%>" class="d-block w-100" alt="" style=" min-height: 250px; max-height: 250px;">
                                                </div>
                                            <%}%>
                                        </div>
                                    
                                        <a href="#carousel-controles-<%=produto.id%>" class="carousel-control-prev" role="button" data-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                        <a href="#carousel-controles-<%=produto.id%>" class="carousel-control-next" role="button" data-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </div>
                                    
                                                                        
                                    <!--<img src="/uploads/<%=produto.imagem1%>" alt="" class="img-fluid">-->
                                </div> <!--Fim do corpo do cartão-->
                                <div class="card-footer text-white" style="height: 250px; display: flex; flex-direction: column;">
                                    <div style="overflow-y: auto; flex: 1;">
                                        <ul> <!--Início da lista-->
                                            <li><strong>Descrição:</strong> <%=produto.descricao%></li>
                                            <li><strong>Valor: </strong> R$ <%=produto.valor.toFixed(2)%></li>
                                            <li><strong>Loja: </strong> <%= produto.loja.nome%></li>
                                        </ul> <!--Fim da lista-->
                                    </div>
                                    <a href="https://wa.me/55<%=produto.loja.whatsapp%>" target="_blank" class="btn btn-secondary w-100 mt-3">Comprar</a>
                                </div> <!--Fim do footer do cartão-->                                
                            </div> <!--Fim do card-->
                        </div> <!--Fim da coluna-->
                    <%})%>
                </div> <!--Fim da linha-->
            </div> <!--Fim do container-->
        </section> <!--Fim da seção-->
    </main> <!--Fim do conteúdo principal-->
</body>